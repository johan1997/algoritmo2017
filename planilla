# algoritmo2017
#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include <string>
#define MAX 100

using namespace std;

struct templeado{
int nroemp;
string nombre;
string apellido;
string direccion;
int telef;
int cel;
float salariobruto;
};
void llenar( templeado plan[MAX],int N);

void main()
{  templeado plan[MAX];
	int N;
   do
    { cout<<"introdusca el numero de empleados"<<endl;
      cin>>N;
    }while(N<1 || N>MAX);
 
 llenar( plan,N);
 getch();


}
void llenar( templeado plan[MAX],int N)
{ int cont=1;
  for(int i=0; i<N;i++)
    { cout<<"numero del empleado:"<<" ";
      plan[i].nroemp=cont;
	  cout<<plan[i].nroemp<<endl;
	  cont++;
	  
	  cout<<"ingrese el nombre del empleado"<<endl;
	  cin>>plan[i].nombre;
	  cout<<"ingrese el apellido del empleado"<<endl;
	  cin>>plan[i].apellido;
	  cout<<"ingrese la direccion del empleado"<<endl;
	  cin>>plan[i].direccion;
	  cout<<"ingrese el telefono del empleado"<<endl;
	  cin>>plan[i].telef;
	  cout<<"ingrese el celular del empleado"<<endl;
	  cin>>plan[i].cel;
	  cout<<"ingrese el salario bruto  del empleado"<<endl;
	  cin>>plan[i].salariobruto;
    
  }
}
