# algoritmo2017
#include "stdafx.h"
#include <iostream>
#include "conio.h"
#define MAX 10
using namespace std;

struct tvec
{
	int id;
	bool band;
};
 
tvec v[MAX];

//prototipos

void cargarvec(tvec v[MAX],int n);
int suma(int n);
int fact(int m);
void mostrarvec( tvec v[MAX],int n);

void main()
{
	int i,j,n;
	cout<<"ingrese el tamanio del vector: ";
	cin>>n;
	cargarvec(v,n);
	mostrarvec(v,n);
	getch();
}

void mostrarvec( tvec v[MAX],int n)
{
	int i;
	for(i=0;i<n;i++)
	{
		cout<<"\n id: "<<v[i].id;
		if(v[i].band==false)
		{ 
			cout<<"\t No es numero curioso.";
		}
		else
			cout<<"\t Es numero curioso. ";
	}

}


int fact(int m)
{
	int p=1,i;
	for(i=1;i<=m;i++)
	{
		p=p*i;
	}
	return p;
}

void cargarvec(tvec v[MAX],int n)
{int p,i;
	for(int i=0;i<n;i++)
	{
		cout<<"ingrese el id: ";
		cin>>v[i].id;
		p=suma(v[i].id);
		if(v[i].id == p)
			v[i].band=true;
		else
			v[i].band=false;
		
	}
}

int suma(int n)
{int m,s=0;
	do
	{
		m=n%10;
		s=s+fact(m);
		n=n/10;
	}while(n != 0);
	return s;
}
